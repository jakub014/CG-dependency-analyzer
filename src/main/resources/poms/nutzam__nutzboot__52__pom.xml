        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <description>NutzBoot, micoservice base on Nutz</description>

    <url>http://nutzam.com</url>
    <issueManagement>
        <system>Github Issue</system>
        <url>http://github.com/nutzam/nutzboot/issues</url>
    </issueManagement>
    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>
    <developers>
        <developer>
            <id>wizzercn</id>
            <name>Wizzer</name>
            <email>wizzer.cn@gmail.com</email>
            <url>https://wizzer.cn</url>
        </developer>
    </developers>
    <scm>
        <connection>scm:git:git://github.com/nutzam/nutzboot.git</connection>

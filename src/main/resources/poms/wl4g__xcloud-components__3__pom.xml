	<packaging>jar</packaging>
	<name>XCloud Component Common(shade)</name>
	<url>http://xcloud.wl4g.com</url>
	<description>A XCloud Component Common(shade).</description>
	<organization>
		<name>wl4g</name>
		<url>https://xcloud.wl4g.com</url>

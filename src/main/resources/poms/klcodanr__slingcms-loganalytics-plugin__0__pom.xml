  <groupId>com.danklco</groupId>
  <artifactId>com.danklco.slingcms.plugins.loganalytics</artifactId>
  <version>1.1-SNAPSHOT</version>
  <name>Apache Sling CMS Log Analytics Plugin</name>
  <description>An Apache Sling CMS plugin to use log files for basic analytics reporting</description>
  <url>https://github.com/klcodanr/slingcms-loganalytics-plugin</url>

  <properties>
    <!-- Use UTF-8 -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    <!-- Java Compiler Version -->
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.compiler.source>1.8</maven.compiler.source>

    <!-- Install Parameters -->
    <sling.protocol>http</sling.protocol>
    <sling.host>localhost</sling.host>
    <sling.port>8080</sling.port>
    <sling.username>admin</sling.username>
    <sling.password>admin</sling.password>

    <!-- Sonar cloud properties -->
    <sonar.projectKey>slingcms-loganalytics-plugin</sonar.projectKey>
    <sonar.organization>klcodanr</sonar.organization>
    <sonar.host.url>https://sonarcloud.io</sonar.host.url>
    <sonar.login>0846a6a2074d6833c69b61f7da98c466a8391093</sonar.login>
  </properties>

  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>

  <scm>
    <url>git@github.com:klcodanr/slingcms-loganalytics-plugin.git</url>
    <developerConnection>scm:git:git@github.com:klcodanr/slingcms-loganalytics-plugin.git</developerConnection>
    <connection>scm:git:git@github.com:klcodanr/slingcms-loganalytics-plugin.git</connection>
    <tag>HEAD</tag>

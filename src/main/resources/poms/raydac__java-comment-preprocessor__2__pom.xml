<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.igormaznitsa</groupId>
    <artifactId>jcp-tests</artifactId>
    <version>0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <jcp.test.version>7.0.5-SNAPSHOT</jcp.test.version>
        <junit.version>5.4.2</junit.version>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <gradle.executable>gradle</gradle.executable>
    </properties>

    <modules>
        <module>jcp-test-ant</module>
        <module>jcp-test-maven</module>
        <module>jcp-test-static-site</module>
        <module>jcp-test-javassist</module>
        <module>jcp-test-gradle</module>
        <module>jcp-test-android</module>
    </modules>

    <profiles>
        <profile>
            <id>new-jdk</id>
            <activation>
                <jdk>(1.8,]</jdk>
            </activation>
            <modules>
                <module>jcp-test-jep238</module>
            </modules>
        </profile>
    </profiles>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.6.0</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>com.igormaznitsa</groupId>
            <artifactId>jcp</artifactId>
            <version>${jcp.test.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <version>${junit.version}</version>
        <scope>test</scope>
      </dependency>
    </dependencies>

    <build>
      <plugins>
          <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-clean-plugin</artifactId>
              <executions>
                  <execution>
                      <id>force-clean</id>
                      <goals>
                          <goal>clean</goal>
                      </goals>
                      <phase>initialize</phase>
                  </execution>
              </executions>
          </plugin>
      </plugins>
    </build>

</project>

<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.xnx3.rabbitmq</groupId>
	<artifactId>rabbitmq</artifactId>
	<version>1.1</version>
	<packaging>jar</packaging>

	<name>rabbitmq</name>
	<description>rabbitmq util</description>
	<url>https://github.com/xnx3/rabbitmq-util</url>
	
	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
		</license>
	</licenses>
	
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<developers>
		<developer>
			<name>leiming guan</name>
			<email>mail@xnx3.com</email>
			<organization>Sonatype</organization>
			<organizationUrl>http://www.guanleiming.com</organizationUrl>
		</developer>
	</developers>

	<dependencies>
		
		<!-- rabbitmq -->
		<dependency>
		  <groupId>com.rabbitmq</groupId>
		  <artifactId>amqp-client</artifactId>
		  <version>5.8.0</version>
		</dependency>
		
    </dependencies>
	
	<!-- 打包成jar时，忽略demo的包 -->
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				 <version>2.4</version>
				<configuration>
					<excludes>
            			<exclude>**/com/xnx3/demo/**</exclude>
          			</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>
	

</project>
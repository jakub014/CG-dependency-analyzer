<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.jslsolucoes</groupId>
		<artifactId>tagria-v4</artifactId>
		<version>4.0.36</version>
	</parent>
	<artifactId>tagria-tag-html-v4</artifactId>

	<dependencies>
		<dependency>
			<groupId>com.jslsolucoes</groupId>
			<artifactId>tagria-tag-base-v4</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.jslsolucoes</groupId>
			<artifactId>tagria-compressor-v4</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.jslsolucoes</groupId>
			<artifactId>tagria-tag-x-v4</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
			<version>4.5.5</version>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpmime</artifactId>
			<version>4.5.5</version>
		</dependency>
	</dependencies>


	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.6.0</version>
				<executions>
					<execution>
						<id>step1</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>java</goal>
						</goals>
						<configuration>
							<includeProjectDependencies>true</includeProjectDependencies>
							<mainClass>com.jslsolucoes.tagria.compressor.v4.ResourceCompressor</mainClass>
							<arguments>
								<argument>${project.basedir}/src/main/resources/com/jslsolucoes/tagria/v4/lib</argument>
								<argument>${project.build.directory}/classes/com/jslsolucoes/tagria/v4/lib</argument>
								<argument>true</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>step2</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>java</goal>
						</goals>
						<configuration>
							<includeProjectDependencies>true</includeProjectDependencies>
							<mainClass>com.jslsolucoes.tagria.tag.html.v4.MetaDataBuilder</mainClass>
							<arguments>
								<argument>${project.basedir}/src/main/resources/tld-fragments</argument>
								<argument>${project.basedir}/src/main/resources/META-INF/v4/html.tld</argument>
								<argument>${project.build.directory}/classes/META-INF/v4/html.tld</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.1.1</version>
				<configuration>
					<excludes>
						<exclude>**/js/bootstrap/**</exclude>
						<exclude>**/js/jquery/**</exclude>
						<exclude>**/js/lazysizes/**</exclude>
						<exclude>**/js/popper/**</exclude>
						<exclude>**/js/tagria/**</exclude>
						<exclude>**/image/theme/base/**</exclude>
						<exclude>**/fonts/theme/base/**</exclude>
						<exclude>**/css/theme/base/**</exclude>
						<exclude>**/css/theme/default/form.css</exclude>
						<exclude>**/css/theme/default/theme.css</exclude>
						<exclude>**/css/theme/default/form.group.css</exclude>
						<exclude>**/css/theme/default/select.css</exclude>
						<exclude>tld/**</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
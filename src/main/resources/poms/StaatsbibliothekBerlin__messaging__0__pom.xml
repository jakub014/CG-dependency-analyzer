<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>de.staatsbibliothek-berlin.hsp</groupId>
  <artifactId>hsp-messaging</artifactId>
  <packaging>pom</packaging>
  <version>1.1.17</version>
  <name>HSP-Messaging</name>
  <description>HSP-Messaging Service</description>
  <url>https://github.com/StaatsbibliothekBerlin/messaging</url>
  <licenses>
    <license>
      <name>MIT License</name>
      <url>https://opensource.org/licenses/MIT</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <url>scm:git:https://github.com/StaatsbibliothekBerlin/messaging</url>
  </scm>

  <modules>
    <module>tei-jaxb</module>
    <module>activitystreams-hsp</module>
  </modules>

  <properties>
    <hsp-messaging.version>${project.version}</hsp-messaging.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>11</maven.compiler.source>
    <maven.compiler.target>11</maven.compiler.target>
    <jackson.version>2.11.0</jackson.version>
    <slf4j.version>1.7.30</slf4j.version>
    <jaxb2-maven-plugin.version>2.5.0</jaxb2-maven-plugin.version>
    <jaxb2-maven-plugin.skipXjc>true</jaxb2-maven-plugin.skipXjc>
    <jaxb-api.version>2.3.1</jaxb-api.version>
    <jaxb-core.version>2.3.0.1</jaxb-core.version>
    <jaxb-impl.version>2.3.2</jaxb-impl.version>
    <javax.annotation-api.version>1.3.2</javax.annotation-api.version>
    <maven-install-plugin.version>3.0.0-M1</maven-install-plugin.version>
    <maven-javadoc-plugin.version>3.2.0</maven-javadoc-plugin.version>
    <maven-release-plugin.version>3.0.0-M1</maven-release-plugin.version>
    <maven-resources-plugin.version>3.1.0</maven-resources-plugin.version>
    <maven-source-plugin.version>3.0.1</maven-source-plugin.version>
    <maven-deploy-plugin.version>3.0.0-M1</maven-deploy-plugin.version>
    <junit-jupiter.version>5.6.1</junit-jupiter.version>
    <jacoco.core.version>0.8.5</jacoco.core.version>
    <maven-surefire-plugin.version>3.0.0-M4</maven-surefire-plugin.version>
    <maven-failsafe-plugin.version>3.0.0-M4</maven-failsafe-plugin.version>
    <!-- Remove third party resources / generated sources from the sonar scan-->
    <sonar.exclusions>
      **/src/test/resources/tei/*/**,**/src/main/java/org/tei_c/*/**,**/src/main/xsd/*,**/src/main/jaxb/*
    </sonar.exclusions>
    <maven-gpg-plugin.version>1.6</maven-gpg-plugin.version>
    <nexus-staging-maven-plugin.version>1.6.8</nexus-staging-maven-plugin.version>
  </properties>

  <developers>

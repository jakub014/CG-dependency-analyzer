<?xml version='1.0' encoding='utf-8'?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<packaging>jar</packaging>

	<parent>
		<groupId>com.pslib.jtool</groupId>
		<artifactId>pslib-jtool-parent</artifactId>
		<version>1.0.4</version>
	</parent>

	<artifactId>pslib-jtool-captcha</artifactId>
	<name>${project.artifactId}</name>
	<description>pslib jtool captcha</description>

	<properties>

	</properties>

	<dependencies>
		<dependency>
			<groupId>${project.parent.groupId}</groupId>
			<artifactId>pslib-jtool-core</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>net.coobird</groupId>
			<artifactId>thumbnailator</artifactId>
			<version>0.4.13</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>3.2.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<createDependencyReducedPom>false</createDependencyReducedPom>
							<!-- 创建源码jar -->
							<createSourcesJar>true</createSourcesJar>
							
							<relocations>
								<relocation>
									<pattern>net.coobird</pattern>
									<shadedPattern>com.pslib.jtool.coobird</shadedPattern>
									<excludes>
									</excludes>
								</relocation>
							</relocations>
							<artifactSet>
								<includes>
									<include>net.coobird:*:*</include>
									<include>com.pslib.jtool.coobird:*:*</include>
								</includes>
							</artifactSet>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>META-INF/maven/**</exclude>
									</excludes>
								</filter>
							</filters>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
		</dependency>
		<!-- ignore integration test for now
		<dependency>
			<groupId>io.joynr.java</groupId>
			<artifactId>integration-tests</artifactId>
			<version>${project.groupId}:${project.artifactId}</version>
		</dependency>
		-->
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>aggregate-report</id>
						<phase>verify</phase>
						<goals>
							<goal>report-aggregate</goal>
						</goals>
						<configuration>
							<title>joynr aggregated coverage</title>
							<outputDirectory>${project.reporting.outputDirectory}/jacoco</outputDirectory>
							<dataFileIncludes>
								<dataFileInclude>**/execution-data</dataFileInclude>
							</dataFileIncludes>
							<skip>${skipTests}</skip>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>

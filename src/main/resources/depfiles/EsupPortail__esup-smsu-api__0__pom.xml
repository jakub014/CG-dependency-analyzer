		<dependency>
		  <groupId>junit</groupId>
		  <artifactId>junit</artifactId>
		  <version>[4.10, 4.99]</version>
		  <scope>test</scope>
		</dependency>

		<dependency>
		  <groupId>org.springframework</groupId>
		  <artifactId>spring-test</artifactId>
		  <scope>test</scope>
		</dependency>

		<dependency>
		    <groupId>org.apache.derby</groupId>

<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.github.wmlynar</groupId>
		<artifactId>jy2-parent</artifactId>
		<version>0.0.22-SNAPSHOT</version>
	</parent>
	<artifactId>jy2-sm-lib-ui</artifactId>
	<dependencies>
		<dependency>
			<groupId>guru.nidi</groupId>
			<artifactId>graphviz-java</artifactId>
			<version>0.5.4</version>
		</dependency>
		<dependency>
			<groupId>com.github.wmlynar</groupId>
			<artifactId>jy2-sm-lib-messages</artifactId>
			<version>0.0.22-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.github.wmlynar</groupId>
			<artifactId>jy2-di</artifactId>
			<version>0.0.22-SNAPSHOT</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>appassembler-maven-plugin</artifactId>
				<version>2.1.0</version>
				<configuration>
					<programs>
						<program>
							<id>jysmlibui</id>
							<mainClass>com.github.jy2.sm.monitor.SmLibMonitorMain</mainClass>
						</program>
					</programs>
					<assembleDirectory>${jy2.assembler.directory}</assembleDirectory>
					<repositoryLayout>${jy2.assembler.repository.layout}</repositoryLayout>
					<useTimestampInSnapshotFileName>${jy2.assembler.use.timestamp}</useTimestampInSnapshotFileName>
					<!-- <extraJvmArguments>-Xmx256m</extraJvmArguments> -->
					<showConsoleWindow>false</showConsoleWindow>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>assemble</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>

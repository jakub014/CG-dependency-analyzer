<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.github.animatedledstrip</groupId>
        <artifactId>animatedledstrip-parent-pom</artifactId>
        <version>1.0.0-pre2.1</version>
    </parent>

    <artifactId>animatedledstrip-pi</artifactId>
    <version>1.0.0-pre2</version>
    <packaging>jar</packaging>

    <name>io.github.animatedledstrip:animatedledstrip-pi</name>
    <description>Library for using the AnimatedLEDStrip library on Raspberry Pis.</description>
    <url>https://github.com/AnimatedLEDStrip/device-pi</url>

    <scm>
        <connection>scm:git:https://github.com/AnimatedLEDStrip/device-pi.git</connection>
        <developerConnection>scm:git:https://github.com/AnimatedLEDStrip/device-pi.git</developerConnection>
        <url>https://github.com/AnimatedLEDStrip/device-pi</url>
    </scm>

    <properties>
        <log4j.version>2.13.2</log4j.version>
    </properties>

    <repositories>
        <repository>
            <id>sonatype-snapshots</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>io.github.animatedledstrip</groupId>
            <artifactId>animatedledstrip-core-jvm</artifactId>
            <version>1.0.0-pre2.1</version>
        </dependency>
        <dependency>
            <groupId>com.github.mbelling</groupId>
            <artifactId>rpi-ws281x-java</artifactId>
            <version>2.0.0-SNAPSHOT</version>
        </dependency>
<!--        For rpi-ws281x-java-->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <version>${log4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
            <version>${log4j.version}</version>
        </dependency>
    </dependencies>

</project>
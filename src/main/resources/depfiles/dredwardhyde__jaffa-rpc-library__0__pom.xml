        <apache.commons.version>3.12.0</apache.commons.version>
        <kryo.version>5.1.0</kryo.version>
        <junit.version>5.7.1</junit.version>
        <maven.compiler.plugin.version>3.7.0</maven.compiler.plugin.version>
        <maven.surefire.plugin.version>3.0.0-M5</maven.surefire.plugin.version>
        <caffeine.cache.version>2.9.0</caffeine.cache.version>
        <javax.annotation-api.version>1.3.2</javax.annotation-api.version>
        <jaffa-rpc-maven-plugin.version>1.1</jaffa-rpc-maven-plugin.version>
        <grpc.version>1.37.0</grpc.version>
        <zookeeper.curator.test.version>5.1.0</zookeeper.curator.test.version>
        <kafka.test.version>2.7.0</kafka.test.version>
        <apache.commons.io.version>2.8.0</apache.commons.io.version>
        <rabbitmq.mock.version>1.1.1</rabbitmq.mock.version>
        <jetbrains.annotations.version>20.1.0</jetbrains.annotations.version>
        <kotlin.version>1.4.30</kotlin.version>
        <prometheus.version>0.10.0</prometheus.version>
        <tcnative.boringssl.version>2.0.38.Final</tcnative.boringssl.version>
        <dokka.version>1.4.30</dokka.version>
    </properties>

    <pluginRepositories>
        <pluginRepository>
            <id>jcenter</id>
            <name>JCenter</name>
            <url>https://jcenter.bintray.com/</url>
        </pluginRepository>
    </pluginRepositories>
    <dependencies>
